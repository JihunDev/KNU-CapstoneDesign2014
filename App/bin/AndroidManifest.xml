            </intent-filter>
        </activity>
            <activity
            android:name="com.example.amigo.Input"
            android:label="@string/app_name" >
        </activity> 
       
       <activity android:name="com.example.amigo.BluetoothChat"
                  android:label="@string/app_name"
                  android:configChanges="orientation|keyboardHidden"/>
     
